# Database Configuration
DATABASE_URL=postgresql://user:password@host:5432/database

# OpenRouter API (OpenAI-compatible, supports multiple AI providers)
OPENROUTER_API_KEY=sk-or-v1-...

# Pinecone Vector Database (for Aura AI Assistant)
PINECONE_API_KEY=pcsk_...
PINECONE_INDEX_NAME=hikma-os

# Session Secret (generate with: openssl rand -base64 32)
SESSION_SECRET=your-32-character-random-string-here

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=1234567890:ABCdefGHIjklMNOpqrsTUVwxyz
AUTHORIZED_TELEGRAM_CHAT_IDS=123456789
TELEGRAM_WEBHOOK_SECRET=your-webhook-secret-here

# Google Calendar OAuth2
GOOGLE_CALENDAR_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_CALENDAR_CLIENT_SECRET=GOCSPX-...
GOOGLE_CALENDAR_REFRESH_TOKEN=1//...

# Google Drive OAuth2 (Optional - uses Calendar credentials if not set)
# Note: If using same OAuth app, ensure you've enabled Drive API and added Drive scope
# GOOGLE_DRIVE_CLIENT_ID=your-client-id.apps.googleusercontent.com
# GOOGLE_DRIVE_CLIENT_SECRET=GOCSPX-...
# GOOGLE_DRIVE_REFRESH_TOKEN=1//...

# Gmail OAuth2 (Optional - for email features)
GMAIL_CLIENT_ID=your-client-id.apps.googleusercontent.com
GMAIL_CLIENT_SECRET=GOCSPX-...
GMAIL_REFRESH_TOKEN=1//...

# Twilio WhatsApp (Optional)
TWILIO_ACCOUNT_SID=AC...
TWILIO_AUTH_TOKEN=...

# Railway Configuration (Auto-set by Railway)
# RAILWAY_PUBLIC_DOMAIN=your-app.up.railway.app
# RAILWAY_ENVIRONMENT=production
# RAILWAY_STATIC_URL=...

# Custom CORS Origins (Optional)
# ALLOWED_ORIGINS=https://example.com,https://another.com

# Node Environment
NODE_ENV=production
